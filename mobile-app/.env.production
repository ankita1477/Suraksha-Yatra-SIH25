# Production Environment Configuration
NODE_ENV=production

# API Configuration
API_BASE_URL=http://192.168.31.36:4000/api
WS_BASE_URL=ws://192.168.31.36:4000

# App Configuration
APP_NAME=Suraksha Yatra
APP_VERSION=1.0.0
APP_ENVIRONMENT=production

# Feature Flags
ENABLE_LOCATION_TRACKING=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_DEBUG_LOGS=false

# Location Services
LOCATION_UPDATE_INTERVAL=60000
LOCATION_DISTANCE_FILTER=50
BACKGROUND_LOCATION_ENABLED=true

# Notification Configuration
NOTIFICATION_SOUND_ENABLED=true
NOTIFICATION_VIBRATION_ENABLED=true

# Security
TOKEN_REFRESH_INTERVAL=1800000
SESSION_TIMEOUT=3600000

# Map Configuration
DEFAULT_MAP_REGION_LATITUDE=28.6139
DEFAULT_MAP_REGION_LONGITUDE=77.2090
DEFAULT_MAP_ZOOM_DELTA=0.01
INCIDENT_FETCH_RADIUS=5000

# Emergency Configuration
EMERGENCY_CONTACT_LIMIT=10
PANIC_BUTTON_COOLDOWN=5000

# Production Tools
ENABLE_REACT_DEVTOOLS=false
ENABLE_FLIPPER=false