# Staging Environment Configuration
NODE_ENV=staging

# API Configuration
API_BASE_URL=http://192.168.31.36:4000/api
WS_BASE_URL=ws://192.168.31.36:4000

# App Configuration
APP_NAME=Suraksha Yatra (Staging)
APP_VERSION=1.0.0-staging
APP_ENVIRONMENT=staging

# Feature Flags
ENABLE_LOCATION_TRACKING=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_DEBUG_LOGS=true

# Location Services
LOCATION_UPDATE_INTERVAL=45000
LOCATION_DISTANCE_FILTER=75
BACKGROUND_LOCATION_ENABLED=true

# Notification Configuration
NOTIFICATION_SOUND_ENABLED=true
NOTIFICATION_VIBRATION_ENABLED=true

# Security
TOKEN_REFRESH_INTERVAL=1800000
SESSION_TIMEOUT=3600000

# Map Configuration
DEFAULT_MAP_REGION_LATITUDE=28.6139
DEFAULT_MAP_REGION_LONGITUDE=77.2090
DEFAULT_MAP_ZOOM_DELTA=0.01
INCIDENT_FETCH_RADIUS=5000

# Emergency Configuration
EMERGENCY_CONTACT_LIMIT=10
PANIC_BUTTON_COOLDOWN=5000

# Staging Tools
ENABLE_REACT_DEVTOOLS=true
ENABLE_FLIPPER=true